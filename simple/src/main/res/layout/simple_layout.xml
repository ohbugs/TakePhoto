<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="使用TakePhoto自带裁切工具裁切图片"
        android:textOff="使用第三方裁切工具裁切图片"
        android:id="@+id/toggleButton" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnPickFromGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:layout_margin="5dp"
            android:text="从相册获取图片" />
        <Button
            android:id="@+id/btnPickFromGalleryWithCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:layout_margin="5dp"
            android:text="从相册获取图片并裁剪" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPickFromCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:layout_margin="5dp"
            android:text="从相机获取图片" />
        <Button
            android:id="@+id/btnPickFromCaptureWithCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:layout_margin="5dp"
            android:text="从相机获取图片并裁剪" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPickFromDocuments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:layout_margin="5dp"
            android:text="从文件选择图片" />
        <Button
            android:id="@+id/btnDocumentsCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cropPic"
            android:layout_margin="5dp"
            android:text="从文件选择图片并裁剪" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgShow"
        android:background="@android:color/darker_gray"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="300dp"
        android:minWidth="260dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY" />

</LinearLayout>
